
@import "normalize.styl"
@import url("http://fonts.googleapis.com/css?family=Open+Sans:400,700");
@import "font.styl"

a
	display inline-block
	margin 0
	text-decoration none
	color #468CBF

body
	font-family 'Open Sans', sans-serif
	font-size 16px
	background #333

figure
	margin 0
ul
	margin 0
	padding 0
p 
	margin 0

.circule
	border-radius 50%
	overflow hidden
.left
	float left
.right 
	float right
.relative
	position relative
.center-block
	margin 0 auto
.wrap
	width 1000px
.backcuad
	background-image: url(../image/backgrounds/bg.png);
	background-repeat: repeat;
.inline 
	display inline-block
.icosize
	font-size 2em
.title
	font-size 2em
	padding .5em 1em 0 1em	
.text 
	text-align justify
	padding 1em
	width 80%
.categorias
	width 85%
	text-align center
	.item
		display inline-block
		padding 1em
		font-size 1em
.productos
	width 85%
	padding-bottom 1em
	.producto
		border 2px solid #999
		padding .5em
		margin .5em
		border-radius 5px
		overflow hidden
		
		.tag 
			font-weight bold
			color #444
			font-size 1em
		.nombre
		.marca
		.codigo
		.description
			font-weight normal
		.imagen
			img
				float right
				width 40%
.header
	height 3.5em

	.logo
		padding-left 10%
		figure
			display inline-block
			width 80px
			background #fff
			img
				width 100%

.contener
	margin 0 auto
	padding-top 2em
	background #fff
	
	.vendors
		text-align center

		figure
			margin 0.5rem
			width 100px
			display inline-block
			img
				opacity: .3;
				width 100%

.menu
	padding-top .5em
	padding-bottom .5em	
	.lista
		text-align center
		.item	
			padding .7em
			padding-top 2em
			padding-bottom 2em
			display inline-block
			appearance none
			background #468CBF
			border-radius 5px
			&:hover
				background #444
			a
				color #fff
				&:hover
					color #468CBF
				p 
					font-size 8px

footer
	background #333
	overflow hidden
	padding 0 0 1em 0

	.contacto
		.title
			color #C6672C
			text-align center
			margin-top 0.2em
			margin-bottom 0.5em
			padding 0

		.info
			color #777
			margin 0 auto
			width 100%
			text-align center

			.phone
			.mail
			.address
				vertical-align top
				&:before
					font-family "grupofares"
					display inline-block
					text-shadow none
					color #777

			.phone
				&:before
						content "\e601"
			.address
				&:before
						content "\e600"
			.mail
				&:before
						content "\e602"

@media screen and (min-width: 768px)

	.menu	
		.lista
			.item	
				a
					p 
						font-size 16px
	.categorias
		width 80%
		.item
			font-size 1.5em
	.contener		
		.vendors
			figure
				margin 1rem
				width 150px
		.logo
			text-align center
			figure
				display inline-block
				width 200px
	.icosize
		font-size 5em
	.productos
		width 80%
		.producto
			.imagen
				img
					float right
					max-width 250px

				