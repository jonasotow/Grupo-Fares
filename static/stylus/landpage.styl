
@import "normalize.styl"
@import url("http://fonts.googleapis.com/css?family=Open+Sans:400,700");

@font-face {
	font-family: 'grupofares';
	src:url('../fonts/grupofares.eot?9miasg');
	src:url('../fonts/grupofares.eot?#iefix9miasg') format('embedded-opentype'),
		url('../fonts/grupofares.woff?9miasg') format('woff'),
		url('../fonts/grupofares.ttf?9miasg') format('truetype'),
		url('../fonts/grupofares.svg?9miasg#grupofares') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="gf-"], [class*=" gf-"] {
	font-family: 'grupofares';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

a
	display inline-block
	margin 0
	text-decoration none
	color #468CBF

body
	font-family 'Open Sans', sans-serif
	font-size 16px
	background #333

figure
	margin 0
ul
	margin 0
	padding 0

.circule
	border-radius 50%
	overflow hidden
.left
	float left
.right 
	float right
.relative
	position relative
.center-block
	margin 0 auto
.wrap
	width 1000px
	
.header
	height 3.5em

	.logo
		padding-left 10%
		figure
			display inline-block
			width 80px
			background #fff
			img
				width 100%
	.h-phone
		padding-top .5em
		padding-right .5em

		.city-phone
			font-size 12px
			color #fff

			.phone
				vertical-align top
				&:before
					font-family "grupofares"
					display inline-block
					text-shadow none
					color #777
					content "\e601"

.contener
	margin 2em auto 0 auto
	background #fff
	
	.vendors
		text-align center

		figure
			margin 0.5rem
			width 100px
			display inline-block
			img
				opacity: .3;
				width 100%

footer
	background #333
	overflow hidden
	padding 1em 0

	.contacto
		.title
			color #C6672C
			text-align center
			margin-top 0.5em
			margin-bottom 0.5em

		.info
			color #777
			margin 0 auto
			width 100%
			text-align center

			.phone
			.mail
			.address
				vertical-align top
				&:before
					font-family "grupofares"
					display inline-block
					text-shadow none
					color #777

			.phone
				&:before
						content "\e601"
			.address
				&:before
						content "\e600"
			.mail
				&:before
						content "\e602"

@media screen and (min-width: 768px)
	.contener		
		.vendors
			figure
				margin 1rem
				width 150px
		.logo
			text-align center
			figure
				display inline-block
				width 250px

				